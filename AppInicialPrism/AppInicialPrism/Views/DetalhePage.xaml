<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="AppInicialPrism.Views.DetalhePage"
             Title="{Binding P.Nome}">

    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center">
            <Label 
                Text="Nome da pessoa selecionada:"
                FontSize="Medium" 
                HorizontalOptions="Center" />
            <Label
                HorizontalOptions="Center"
                FontSize="Large"
                Text="{Binding P.Nome}"/>
            <Label 
                Text="CPF da pessoa selecionada:"
                FontSize="Medium" 
                HorizontalOptions="Center" />
            <Label
                HorizontalOptions="Center"
                FontSize="Large"
                Text="{Binding P.CPF}"/>
        </StackLayout>
    </ContentPage.Content>
  
    
    
    
</ContentPage>